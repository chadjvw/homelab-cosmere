{
  $schema: "https://docs.renovatebot.com/renovate-schema.json",
  packageRules: [
    {
      description: "Skip date based images",
      matchDatasources: ["docker"],
      allowedVersions: "!/^\\d{4}.*$/",
    },
    {
      description: "Avoid old lidarr images",
      matchDatasources: ["docker"],
      matchPackageNames: "ghcr.io/linuxserver/lidarr",
      allowedVersions: "<=8.0",
    },
    {
      description: "Avoid old qbittorrent images",
      matchDatasources: ["docker"],
      matchPackageNames: "ghcr.io/linuxserver/qbittorrent",
      allowedVersions: "<=14.0",
    },
    {
      matchManagers: ["github-actions"],
      automerge: true,
      automergeType: "branch",
      matchUpdateTypes: ["minor", "patch", "digest"],
      ignoreTests: true,
    },
  ],
}
